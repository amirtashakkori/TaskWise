<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenTaskManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryVariant">@color/darkerGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightGreen</item>
        <item name="colorSecondaryVariant">@color/darkerLightGreen</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/darkerGreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gilroy_samibold_regular</item>
        <item name="actionMenuTextColor">@color/darkGreen</item>
        <item name="android:textAppearance">@style/menuItemText</item>
    </style>

    <style name="Theme.RedTaskManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryVariant">@color/darkerRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ivory</item>
        <item name="colorSecondaryVariant">@color/darkerIvory</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/darkerRed</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkerRed</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gilroy_samibold_regular</item>
        <item name="actionMenuTextColor">@color/darkRed</item>
        <item name="android:textAppearance">@style/menuItemText</item>
    </style>

    <style name="Theme.BlueTaskManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkerBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorSecondaryVariant">@color/darkerLightBlue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/darkerBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkerBlue</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gilroy_samibold_regular</item>
        <item name="actionMenuTextColor">@color/darkBlue</item>
        <item name="android:textAppearance">@style/menuItemText</item>
    </style>

    <style name="Widget.MaterialComponents.MaterialCalendar.MonthTextView." parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
        <item name="colorControlHighlight">@color/lightGreen</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorSecondary">@color/darkGreen</item>
        <item name="android:textColorPrimary">@color/darkGreen</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/TextAppearance.MyTheme.calendarWeekDays</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">@drawable/bg_spinner</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MyCalendar" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">?android:attr/colorPrimary</item>
        <item name="android:textColorPrimary">?android:attr/colorPrimary</item>
        <item name="android:textColorSecondaryInverse">?android:attr/colorPrimary</item>
    </style>

    <style name="MyDatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
    </style>

    <style name="customAppCompatButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="fontFamily">@font/gilroy_samibold_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="borderWidth">1dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="borderRound">8dp</item>
    </style>



</resources>
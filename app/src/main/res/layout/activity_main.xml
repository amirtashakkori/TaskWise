<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_dark2darker">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AppBar"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@drawable/bg_dark2darker">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?colorSecondary"
            android:background="@drawable/bg_dark2darker"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:titleEnabled="false"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello Amir"
                            android:textColor="?colorSecondary" />

                        <TextView
                            android:id="@+id/headerTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/todayPlans"
                            android:textColor="?colorOnSurface"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/plansNumberTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="(5 Plans)"
                            android:textColor="?colorOnSurface"
                            android:textSize="28sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/deleteAllBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_header_buttons">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_delete"
                            app:tint="?colorOnSurface"
                            tools:ignore="UseAppTint" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/themeBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_header_buttons">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_them_mode"
                            app:tint="?colorOnSurface" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/searchBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_header_buttons"
                        android:baselineAligned="false">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_search"
                            app:tint="?colorOnSurface" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light2darker"
                    android:layout_marginTop="8dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="55dp"
                    android:elevation="-1dp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:id="@+id/weekDayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:layout_centerHorizontal="true"
                        android:text="Monday"
                        android:textColor="?colorPrimary" />

                    <DigitalClock
                        android:id="@+id/clockTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="?colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/gilroy_samibold_regular"
                        android:layout_below="@+id/weekDayTv"
                        android:layout_marginTop="14dp"/>

                    <TextView
                        android:id="@+id/monthTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:layout_centerHorizontal="true"
                        android:text="September"
                        android:textColor="?colorPrimary"
                        android:layout_below="@+id/clockTv"
                        android:layout_marginTop="10dp"/>


                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/taskListSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="-30dp"
        android:visibility="visible"
        android:padding="12dp"
        android:background="@drawable/bg_white2white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="22dp"
            android:visibility="visible"
            android:orientation="vertical">

            <com.zires.switchsegmentedcontrol.ZiresSwitchSegmentedControl
                android:id="@+id/taskListSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:activeBgColor="?colorPrimary"
                app:activeTextColor="?colorOnSurface"
                app:backgroundColor="?colorOnPrimary"
                app:switchFontFamily="gilroy_samibold_regular"
                app:borderColor="?colorSecondary"
                app:inactiveTextColor="?colorSecondary"
                app:strokeWidth="1dp"
                app:textSize="6sp"
                app:textToggleLeft="Today Tasks"
                app:textToggleRight="All Tasks"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tasksRv"
                android:layout_below="@+id/taskListSwitch"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="60dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/allTaskEmptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You didn't set any task exept for today!"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textColor="?colorPrimary"
                android:layout_marginTop="80dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/bg_white2white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginTop="-35dp"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/empty_state"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You didn't set any task yet!"
            android:textSize="18sp"
            android:textColor="?colorPrimary"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add"
        android:backgroundTint="?colorPrimary"
        app:tint="?colorOnSurface"
        android:layout_margin="20dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
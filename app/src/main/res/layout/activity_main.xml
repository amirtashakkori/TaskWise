<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taskwise.Main.MainActivity"
    android:background="@drawable/bg_dark2darker">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/backBtn"
                                android:layout_width="36dp"
                                android:layout_height="36dp">

                                <ImageView
                                    android:id="@+id/drawerToggle"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_menu"
                                    app:tint="?colorSecondary" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/helloTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/hi"
                                android:textColor="?colorSecondary"
                                android:textSize="16sp" />

                            <RelativeLayout
                                android:id="@+id/calendarBtn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_header_buttons">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="?colorOnSurface" />

                            </RelativeLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/headerTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/app_name"
                            android:textColor="?colorOnSurface"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/plansMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lineSpacingExtra="8dp"
                            android:text="@string/notEmpty"
                            android:textColor="?colorOnSurface"
                            android:textSize="18sp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light2darker"
                    android:paddingTop="16dp"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/weekDayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Monday"
                        android:textColor="?colorPrimary"
                        android:textSize="26sp" />

                    <TextClock
                        android:id="@+id/clockTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weekDayTv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/gilroy_samibold_regular"
                        android:textColor="?colorOnSurface"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/monthTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clockTv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="September"
                        android:textColor="?colorPrimary"
                        android:textSize="26sp" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:tabBackground="@drawable/bg_tabs_selector"
                        android:background="@android:color/transparent"
                        app:tabGravity="fill"
                        app:tabSelectedTextColor="?colorAccent"
                        app:tabTextColor="?colorOnPrimarySurface"
                        android:layout_gravity="center_horizontal"
                        app:tabTextAppearance="@style/tabLayoutText"
                        app:tabSelectedTextAppearance="@style/selectedTabLayoutText"
                        app:tabIndicator="@null"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?colorOnPrimary"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:padding="8dp"
                    android:paddingEnd="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clickable="true"
                        android:paddingBottom="56dp"
                        android:paddingTop="4dp"
                        android:contextClickable="true"/>

                    <LinearLayout
                        android:id="@+id/emptyState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/emptyStateImg"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:src="@drawable/il_event_empty_state" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:layout_marginEnd="20dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addEventBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorPrimary"
                app:fabSize="mini"
                android:elevation="0dp"
                app:tint="?colorOnSurface"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_event"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addTaskBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorPrimary"
                app:fabSize="mini"
                android:elevation="0dp"
                android:src="@drawable/ic_check"
                app:tint="?colorOnSurface"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/addPlanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorPrimary"
                app:icon="@drawable/ic_add"
                android:textColor="?colorOnSurface"
                app:iconTint="?colorOnSurface"
                android:text="@string/extendedFab"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                app:elevation="0dp"
                android:textAlignment="center"
                android:elevation="0dp"/>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationMain"
        app:menu="@menu/main_navigation"
        android:visibility="visible"
        android:layout_gravity="start"
        app:itemTextColor="?colorAccent"
        app:itemIconTint="?colorAccent"
        android:fitsSystemWindows="false"
        android:background="?colorOnPrimary"
        app:headerLayout="@layout/item_navigation_header"/>

</androidx.drawerlayout.widget.DrawerLayout>
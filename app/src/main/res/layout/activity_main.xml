<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_dark2darker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/drawerToggle"
                                android:layout_width="@dimen/buttonLayout"
                                android:layout_height="@dimen/buttonLayout"
                                android:src="@drawable/ic_menu"
                                app:tint="?colorSecondary" />

                            <TextView
                                android:id="@+id/nameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello Amir"
                                android:textSize="18sp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8dp"
                                android:textColor="?colorSecondary" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/headerTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/todayPlans"
                            android:textColor="?colorOnSurface"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/plansNumberTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="(5 Plans)"
                            android:textColor="?colorOnSurface"
                            android:textSize="28sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/searchBtn"
                        android:layout_width="@dimen/buttonLayout"
                        android:layout_height="@dimen/buttonLayout"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_header_buttons"
                        android:baselineAligned="false">

                        <ImageView
                            android:layout_width="@dimen/buttonIcon"
                            android:layout_height="@dimen/buttonIcon"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_search"
                            app:tint="?colorOnSurface" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_light2darker"
                    android:elevation="-1dp"
                    android:fitsSystemWindows="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="55dp"
                    app:layout_collapseMode="parallax">

                    <TextView
                        android:id="@+id/weekDayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Monday"
                        android:textColor="?colorPrimary"
                        android:textSize="28sp" />

                    <DigitalClock
                        android:id="@+id/clockTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weekDayTv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/gilroy_samibold_regular"
                        android:textColor="?colorOnSurface"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/monthTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clockTv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="September"
                        android:textColor="?colorPrimary"
                        android:textSize="28sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:background="@drawable/bg_white2white"
                    android:layout_marginTop="-35dp"
                    android:padding="16dp">

                    <RelativeLayout
                        android:id="@+id/taskList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true">

                        <com.zires.switchsegmentedcontrol.ZiresSwitchSegmentedControl
                            android:id="@+id/taskListSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            app:activeBgColor="?colorPrimary"
                            app:activeTextColor="?colorOnSurface"
                            app:backgroundColor="?colorOnPrimary"
                            app:switchFontFamily="gilroy_samibold_regular"
                            app:borderColor="?colorSecondary"
                            app:inactiveTextColor="?colorSecondary"
                            app:strokeWidth="1dp"
                            app:textSize="6sp"
                            app:textToggleLeft="Today Tasks"
                            app:textToggleRight="All Tasks"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tasksRv"
                            android:layout_below="@+id/taskListSwitch"
                            android:layout_marginTop="24dp"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="60dp"
                            android:visibility="visible"/>

                        <ImageView
                            android:id="@+id/singleCatEmptyState"
                            android:layout_width="280dp"
                            android:layout_height="280dp"
                            android:src="@drawable/il_empty_state"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/emptyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:src="@drawable/il_empty_state" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="12dp"
                            android:text="You didn't set any task yet!"
                            android:textColor="?colorSecondary"
                            android:textSize="18sp"
                            android:fontFamily="@font/gilroy_samibold_regular"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addTaskBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="?colorPrimary"
            android:src="@drawable/ic_add"
            app:tint="?colorOnSurface"
            android:layout_margin="20dp"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationMain"
        app:menu="@menu/main_navigation"
        android:visibility="visible"
        android:layout_gravity="left"
        app:itemTextColor="?colorAccent"
        app:itemIconTint="?colorAccent"
        android:fitsSystemWindows="false"
        android:background="?colorOnPrimary"
        app:headerLayout="@layout/item_navigation_header"/>


</androidx.drawerlayout.widget.DrawerLayout>